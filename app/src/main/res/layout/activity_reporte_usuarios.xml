<!-- res/layout/activity_reporte_usuarios.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewReportTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reporte de Usuarios"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textViewReportDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha del Reporte: "
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <TableLayout
        android:id="@+id/tableLayoutReport"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:stretchColumns="1"
        android:padding="8dp" />

    <Button
        android:id="@+id/buttonDownloadPdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descargar PDF"
        android:layout_gravity="center" />
</LinearLayout>
