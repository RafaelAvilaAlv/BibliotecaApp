<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/textViewTituloPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Título del Libro"
        android:textSize="16sp"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewFechaPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de Pedido"
        android:textSize="16sp"
        android:layout_below="@id/textViewTituloPedido"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewFechaDevolucion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de Devolución"
        android:textSize="16sp"
        android:layout_below="@id/textViewFechaPedido"
        android:layout_alignParentStart="true" />

</RelativeLayout>
